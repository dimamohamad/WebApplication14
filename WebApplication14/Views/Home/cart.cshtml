
@{
    ViewBag.Title = "cart";
    var names = Session["name"] as List<string>;
    var images = Session["image"] as List<string>;
    var prices = Session["price"] as List<string>;
}

<h2>cart</h2>

<form method="post">
    <div  class="row">
        @for (int i = 0; i < names.Count; i++)
        {<div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@images[i]" alt="Card image cap" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <p class="card-text">name :@names[i]</p>
                        <p class="card-text">price:@prices[i]</p>

                    </div>
                </div>

            </div>
        }

    </div>
    </form>
